			<buttonext:ButtonExt  id="btnAnterior" click="retornarNavegacao()" styleName="navegacao_anterior"  toolTip="Retornar navega챌찾o"/>
			<buttonext:ButtonExt  id="btnProximo" click="avancarNavegacao()" styleName="navegacao_proximo"  toolTip="Avan챌ar navega챌찾o"/>
